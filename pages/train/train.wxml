<!--pages/train/train.wxml-->

<view class="haibao">
	<swiper indicator-dots="{{false}}" autoplay="{{true}}" interval="{{5000}}" duration="{{500}}" circular="{{true}}" style="height:80px;">
		<block wx:for="{{imgUrls}}" wx:key="{{item.id}}">
			<swiper-item>
				<image src="{{item}}" style="width:100%;height:80px;" />
			</swiper-item>
		</block>
	</swiper>
</view>